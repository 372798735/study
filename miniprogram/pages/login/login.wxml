<view class="login-container">
  <view class="logo-container">
    <!-- Logo 图标：如果有 logo.png 文件，取消下面一行的注释 -->
    <!-- <image class="logo" src="/images/logo.png" mode="aspectFit"></image> -->
    
    <!-- 临时使用图标+文字 -->
    <view class="logo-icon">📐</view>
    <text class="app-name">航晧高考数学</text>
  </view>

  <view class="form-container">
    <view class="input-group">
      <text class="label">手机号</text>
      <input
        class="input"
        type="number"
        placeholder="请输入手机号"
        maxlength="11"
        bindinput="onPhoneInput"
        value="{{phone}}"
      />
    </view>

    <view class="input-group">
      <text class="label">密码</text>
      <input
        class="input"
        type="password"
        placeholder="请输入密码（至少6位）"
        bindinput="onPasswordInput"
        value="{{password}}"
      />
    </view>

    <button
      class="login-button"
      type="primary"
      bindtap="handleLogin"
      loading="{{loading}}"
      disabled="{{loading}}"
    >
      登录
    </button>

    <view class="tips">
      <text>没有账号？请联系管理员创建</text>
    </view>
  </view>
</view>

