/* pages/download/list/list.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.resources-wrapper {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.resource-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.resource-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.resource-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.resource-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  font-size: 40rpx;
  margin-right: 20rpx;
}

.resource-icon.pdf {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
}

.resource-icon.word {
  background: linear-gradient(135deg, #4c8bf5 0%, #3b76dc 100%);
}

.resource-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.resource-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.resource-type {
  font-size: 24rpx;
  color: #999;
}

.download-icon {
  font-size: 36rpx;
  margin-left: 10rpx;
}

.resource-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.resource-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.resource-size,
.resource-time {
  font-size: 24rpx;
  color: #999;
}

/* 加载和空状态 */
.loading,
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading text,
.empty-text {
  font-size: 28rpx;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.load-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #999;
}
