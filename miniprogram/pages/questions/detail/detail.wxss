/* pages/questions/detail/detail.wxss */
.container {
  padding: 30rpx;
  padding-bottom: 60rpx;
  position: relative;
}

.detail-content {
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 题目卡片 */
.question-card {
  margin-bottom: 30rpx;
}

.question-header {
  margin-bottom: 20rpx;
}

.question-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.6;
  display: block;
  margin-bottom: 20rpx;
}

.tags {
  display: flex;
  gap: 16rpx;
}

.question-type {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.question-content {
  font-size: 32rpx;
  color: #333;
  line-height: 1.8;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}

/* 选项列表 */
.options-list {
  margin-bottom: 30rpx;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  margin-bottom: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
  position: relative;
}

.option-item.selected {
  background: #e6f0ff;
  border-color: #409eff;
}

.option-item.correct {
  background: #e8f5e9;
  border-color: #67c23a;
}

.option-item.wrong {
  background: #ffebee;
  border-color: #f56c6c;
}

.option-label {
  width: 56rpx;
  height: 56rpx;
  background: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.option-item.selected .option-label {
  background: #409eff;
  color: #fff;
}

.option-item.correct .option-label {
  background: #67c23a;
  color: #fff;
}

.option-item.wrong .option-label {
  background: #f56c6c;
  color: #fff;
}

.option-content {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.option-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: bold;
}

.option-icon text {
  color: #67c23a;
}

.option-item.wrong .option-icon text {
  color: #f56c6c;
}

/* 提交按钮 */
.submit-btn {
  margin-top: 30rpx;
}

.submit-btn button {
  width: 100%;
  height: 88rpx;
  font-size: 32rpx;
}

/* 答案解析部分 */
.answer-section {
  margin-top: 40rpx;
  padding-top: 40rpx;
  border-top: 1rpx solid #eee;
}

/* 主观题提示 */
.answer-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.tip-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.tip-text {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
}

.answer-result {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  margin-bottom: 30rpx;
  border-radius: 12rpx;
}

.answer-result.correct {
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
}

.answer-result.wrong {
  background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
}

.result-icon {
  font-size: 64rpx;
  margin-right: 20rpx;
}

.answer-result.correct .result-icon {
  color: #67c23a;
}

.answer-result.wrong .result-icon {
  color: #f56c6c;
}

.result-text {
  font-size: 36rpx;
  font-weight: bold;
}

.answer-result.correct .result-text {
  color: #67c23a;
}

.answer-result.wrong .result-text {
  color: #f56c6c;
}

.correct-answer {
  margin-bottom: 30rpx;
  padding: 24rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}

.correct-answer .label {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
}

.correct-answer .value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.explanation {
  margin-bottom: 30rpx;
}

.explanation .label {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
}

.explanation .content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
  display: block;
  padding: 24rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}

/* 视频讲解 */
.video-section {
  margin-bottom: 30rpx;
}

.video-section .label {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
}

.video-player {
  width: 100%;
  height: 420rpx;
  border-radius: 8rpx;
  background-color: #000;
  overflow: hidden;
}

/* 重新答题 */
.retry-btn button {
  width: 100%;
  height: 88rpx;
  font-size: 32rpx;
}
