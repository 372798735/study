/* pages/wrong-book/wrong-book.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 页面标题 */
.page-header {
  padding: 60rpx 30rpx 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  text-align: center;
}

.page-title {
  display: block;
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.page-subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
}

/* 错题本入口网格 */
.wrong-book-grid {
  padding: 30rpx;
}

.grid-item {
  position: relative;
  padding: 40rpx 30rpx;
  margin-bottom: 24rpx;
  transition: all 0.3s ease;
}

.grid-item:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.item-icon {
  font-size: 72rpx;
  margin-bottom: 20rpx;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  margin: 0 auto 20rpx;
}

.item-icon.objective {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.item-icon.subjective {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.item-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 12rpx;
}

.item-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
  text-align: center;
  margin-bottom: 20rpx;
}

.item-arrow {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 36rpx;
  color: #409eff;
  font-weight: bold;
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 提示信息 */
.tips-section {
  margin: 30rpx;
  padding: 30rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}
