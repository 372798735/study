/* pages/profile/profile.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 30rpx;
}

/* 用户信息区域 */
.user-info-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 30rpx 40rpx;
  margin-bottom: 20rpx;
}

.user-header {
  display: flex;
  align-items: center;
}

.avatar-wrapper {
  padding: 0;
  margin: 0;
  border: none;
  background: transparent;
  line-height: 1;
  position: relative;
}

.avatar-wrapper::after {
  border: none;
}

.user-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  background: #fff;
  margin-right: 30rpx;
}

.avatar-hint {
  position: absolute;
  bottom: -25rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
  white-space: nowrap;
  text-align: center;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.user-name-wrapper {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.user-name,
.user-name-input {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  margin-right: 16rpx;
}

.user-name-input {
  background: transparent;
  border: none;
  padding: 0;
  max-width: 300rpx;
}

.login-tag {
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #fff;
  backdrop-filter: blur(10rpx);
}

.user-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
}

/* 统计数据区域 */
.stats-section {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 20rpx;
  margin: 0 30rpx 20rpx;
}

.stats-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 12rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.stats-label {
  font-size: 24rpx;
  color: #999;
}

.stats-divider {
  width: 1rpx;
  height: 60rpx;
  background-color: #eee;
  margin: 0 10rpx;
}

/* 菜单区域 */
.menu-section {
  padding: 0 30rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s;
}

.menu-item:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-right: 24rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
  border-radius: 16rpx;
}

.menu-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.menu-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #999;
}

.menu-arrow {
  font-size: 48rpx;
  color: #ddd;
  font-weight: 300;
}

/* 退出登录按钮 */
.logout-section {
  padding: 0 30rpx;
  margin-top: 40rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  color: #f56c6c;
  font-size: 32rpx;
  border-radius: 16rpx;
  border: 2rpx solid #f56c6c;
  box-shadow: 0 2rpx 12rpx rgba(245, 108, 108, 0.15);
  text-align: center;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logout-btn::after {
  border: none;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx 0 20rpx;
}

.version-text {
  font-size: 24rpx;
  color: #ccc;
}
