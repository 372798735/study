/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 0;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #5b8fd9 0%, #4a7fc8 50%, #3a6fb8 100%);
  padding: 60rpx 30rpx;
  text-align: center;
  position: relative;
  box-shadow: 0 4rpx 12rpx rgba(74, 127, 200, 0.3);
}

.page-header::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(
    90deg,
    #ff6b6b 0%,
    #feca57 25%,
    #48dbfb 50%,
    #ff9ff3 75%,
    #ff6b6b 100%
  );
}

.page-title {
  font-size: 52rpx;
  font-weight: bold;
  color: #fff;
  letter-spacing: 6rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  animation: titleFade 1s ease-out;
}

@keyframes titleFade {
  0% {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 功能网格 */
.function-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 30rpx;
}

.grid-item {
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  position: relative;
  overflow: hidden;
}

.grid-item::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.3) 0%,
    rgba(255, 255, 255, 0) 100%
  );
  pointer-events: none;
}

.grid-item:active {
  transform: scale(0.96) translateY(4rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

/* 图标 */
.grid-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.15));
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%,
  100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-8rpx);
  }
}

.grid-title {
  font-size: 38rpx;
  font-weight: bold;
  color: #d32f2f;
  margin-bottom: 6rpx;
  text-align: center;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  z-index: 1;
}

.grid-subtitle {
  font-size: 30rpx;
  font-weight: bold;
  color: #c62828;
  text-align: center;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  z-index: 1;
}

/* 角标装饰 */
.grid-corner {
  position: absolute;
  top: 0;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(
    135deg,
    transparent 50%,
    rgba(255, 255, 255, 0.2) 50%
  );
}

/* 徽章 */
.grid-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  padding: 6rpx 16rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  color: #fff;
  font-size: 20rpx;
  font-weight: bold;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.4);
  animation: pulse 2s ease-in-out infinite;
  z-index: 2;
}

@keyframes pulse {
  0%,
  100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

/* 灰色背景 - 优化渐变 */
.grid-item-gray {
  background: linear-gradient(135deg, #d5d5d5 0%, #b8b8b8 100%);
  border: 2rpx solid rgba(255, 255, 255, 0.5);
}

/* 浅蓝色背景 - 优化渐变 */
.grid-item-blue {
  background: linear-gradient(135deg, #c8d8f0 0%, #a0b8e0 100%);
  border: 2rpx solid rgba(255, 255, 255, 0.5);
}

/* 浅色背景 - 优化渐变 */
.grid-item-light {
  background: linear-gradient(135deg, #ececec 0%, #d0d0d0 100%);
  border: 2rpx solid rgba(255, 255, 255, 0.5);
}
