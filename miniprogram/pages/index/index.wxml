<!--pages/index/index.wxml-->
<view class="container">
  <!-- 页面标题 -->
  <view class="page-header">
    <text class="page-title">教育学习平台</text>
  </view>

  <!-- 功能网格 -->
  <view class="function-grid">
    <!-- 第一行 -->
    <view class="grid-item grid-item-light" bindtap="goToObjectiveQuestions">
      <view class="grid-icon">📝</view>
      <text class="grid-title">训练系统</text>
      <text class="grid-subtitle">(客观题)</text>
      <view class="grid-badge">HOT</view>
    </view>
    <view class="grid-item grid-item-light" bindtap="goToVideoNotes">
      <view class="grid-icon">📹</view>
      <text class="grid-title">视频号笔记</text>
      <view class="grid-corner"></view>
    </view>

    <!-- 第二行 -->
    <view class="grid-item grid-item-light" bindtap="goToSubjectiveQuestions">
      <view class="grid-icon">✍️</view>
      <text class="grid-title">训练系统</text>
      <text class="grid-subtitle">(主观题)</text>
      <view class="grid-corner"></view>
    </view>
    <view class="grid-item grid-item-light" bindtap="goToStudyVideos">
      <view class="grid-icon">🎬</view>
      <text class="grid-title">学习视频</text>
      <view class="grid-badge">NEW</view>
    </view>

    <!-- 第三行 -->
    <view class="grid-item grid-item-light" bindtap="goToWrongBook">
      <view class="grid-icon">📖</view>
      <text class="grid-title">错题本</text>
      <view class="grid-corner"></view>
    </view>
    <view class="grid-item grid-item-light" bindtap="goToDownload">
      <view class="grid-icon">⬇️</view>
      <text class="grid-title">下载专区</text>
      <view class="grid-corner"></view>
    </view>
  </view>
</view>
