  <!-- 推荐内容 -->
  <view class="section">
    <view class="section-header">
      <text class="section-title">🔥 热门题目</text>
      <text class="section-more" bindtap="goToQuestions">更多 ></text>
    </view>
    <view class="question-list">
      <!-- 题目列表 -->
      <view class="question-item card" wx:for="{{questions}}" wx:key="id" bindtap="goToQuestionDetail" data-id="{{item.id}}">
        <view class="question-header">
          <text class="question-title">{{item.title}}</text>
          <view class="tag tag-{{item.difficulty === 'easy' ? 'success' : item.difficulty === 'medium' ? 'warning' : 'danger'}}">
            {{item.difficulty === 'easy' ? '简单' : item.difficulty === 'medium' ? '中等' : '困难'}}
          </view>
        </view>
        <text class="question-content">{{item.content}}</text>
        <view class="question-meta">
          <text class="meta-item">📚 {{item.category}}</text>
          <text class="meta-item">{{item.type === 'single' ? '📝 单选题' : item.type === 'multiple' ? '✅ 多选题' : item.type === 'fill' ? '✍️ 填空题' : '📖 简答题'}}</text>
        </view>
      </view>

      <!-- 空状态提示 -->
      <view class="empty-state" wx:if="{{questions.length === 0}}">
        <view class="empty-icon">📝</view>
        <text class="empty-text">暂无题目数据</text>
        <text class="empty-hint">请先在管理后台添加题目</text>
      </view>
    </view>
  </view>

