/* pages/videos/player/player.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 32rpx;
  color: #666;
}

.player-content {
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 视频容器 */
.video-container {
  width: 100%;
  background: #000;
  position: relative;
}

.video-player {
  width: 100%;
  height: 422rpx;
  background-color: #000;
}

/* 视频信息 */
.video-info {
  margin: 20rpx;
  padding: 30rpx;
}

.video-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.video-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #999;
}

.category {
  padding: 8rpx 16rpx;
  background: #e6f0ff;
  color: #409eff;
  border-radius: 4rpx;
  font-size: 24rpx;
}

.video-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}
