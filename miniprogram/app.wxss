/* 按钮样式 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  transition: all 0.3s;
}

.btn-primary {
  background-color: #409eff;
  color: #fff;
}

.btn-success {
  background-color: #67c23a;
  color: #fff;
}

.btn-warning {
  background-color: #e6a23c;
  color: #fff;
}

.btn-danger {
  background-color: #f56c6c;
  color: #fff;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
}

.tag-primary {
  background-color: #ecf5ff;
  color: #409eff;
  border: 1rpx solid #b3d8ff;
}

.tag-success {
  background-color: #f0f9ff;
  color: #67c23a;
  border: 1rpx solid #c2e7b0;
}

.tag-warning {
  background-color: #fdf6ec;
  color: #e6a23c;
  border: 1rpx solid #f5dab1;
}

.tag-danger {
  background-color: #fef0f0;
  color: #f56c6c;
  border: 1rpx solid #fbc4c4;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #eee;
  margin: 30rpx 0;
}

/* 空状态 */
.empty {
  padding: 80rpx 0;
  text-align: center;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
}

/* 加载中 */
.loading {
  padding: 40rpx 0;
  text-align: center;
  color: #999;
}
